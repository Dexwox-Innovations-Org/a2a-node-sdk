{
  "name": "@dexwox/a2a-core",
  "version": "0.1.0",
  "description": "Core types and utilities for A2A Node SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": false,
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "npm run clean && tsc --project tsconfig.json --outDir dist --declaration --declarationMap --emitDeclarationOnly && tsc --project tsconfig.json --outDir dist --skipLibCheck",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.201.1",
    "@opentelemetry/semantic-conventions": "^1.33.0",
    "json-schema-to-zod": "^2.6.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^3.1.3",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "license": "Apache-2.0"
}
